{
  "extends": "./node_modules/gts/",
  "plugins": ["@typescript-eslint", "eslint-plugin-import"],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    }
  },
  "rules": {
    "node/no-unpublished-import": 0,
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "internal", "external", "sibling", "parent", "index"],
        "pathGroups": [
          { "pattern": "@coralblack/**", "group": "external", "position": "after" },
          { "pattern": "@assets/**", "group": "external", "position": "after" },
          { "pattern": "@components/**", "group": "external", "position": "after" },
          { "pattern": "@layouts/**", "group": "external", "position": "after" },
          { "pattern": "@pages/**", "group": "external", "position": "after" },
          { "pattern": "@apis/**", "group": "external", "position": "after" },
          { "pattern": "@consts/**", "group": "external", "position": "after" },
          { "pattern": "@utils/**", "group": "external", "position": "after" },
          { "pattern": "@selectors/**", "group": "external", "position": "after" },
          { "pattern": "@typings/**", "group": "external", "position": "after" },
          { "pattern": "@states/**", "group": "external", "position": "after" },
          { "pattern": "bignumber.js", "group": "index", "position": "after" },
          { "pattern": "dayjs", "group": "index", "position": "after" },
          { "pattern": "lodash", "group": "index", "position": "after" }
        ],
        "pathGroupsExcludedImportTypes": [],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "space-infix-ops": ["error"],
    "keyword-spacing": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-multi-spaces": "error",
    "space-before-blocks": ["error", "always"],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "space-in-parens": ["error", "never"],
    "array-bracket-spacing": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "strict"
      }
    ],
    "quotes": ["warn", "double", { "avoidEscape": true }],
    "quote-props": ["error", "as-needed"],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": ["const", "let", "var", "directive"],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": ["const", "let", "var"],
        "next": ["const", "let", "var"]
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "no-console": ["warn"],
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }
    ]
  }
}
